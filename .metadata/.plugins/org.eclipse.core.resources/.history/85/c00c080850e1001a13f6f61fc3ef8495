package section4;

public class LeapYearCalculator {

	public static void main(String[] args) {
		System.out.println(isLeapYear(1800));

	}
	public static boolean isLeapYear(int year) {
		boolean isLeapYear  = false;
		if(!(year >= 1) && (year <= 9999)) {
			return false;
		}
		
		if((year % 4) == 0)
		{
			if((year % 100)==0)
			{
				if ((year % 400)==0) {
					isLeapYear = true;
				}
			}
		}
		else {
			isLeapYear = false;
		}
		
		return isLeapYear;
			
	}
}
