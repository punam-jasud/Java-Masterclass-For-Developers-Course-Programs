package section4;

public class LeapYearCalculator {

	public static void main(String[] args) {
		System.out.println(isLeapYear(1924));

	}
	public static boolean isLeapYear(int year) {
		boolean leap = false;
		if(year % 4 == 0)
        {
            if( year % 100 == 0)
            {
                // year is divisible by 400, hence the year is a leap year
                if ( year % 400 == 0)
                    leap = true;
                else
                    leap = false;
            }
            else
                leap = true;
        }
        else
            leap = false;
		
		
		
		return leap;
			
	}
}
